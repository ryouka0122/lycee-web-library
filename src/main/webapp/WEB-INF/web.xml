<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
         xmlns="http://xmlns.jcp.org/xml/ns/javaee" 
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" 
         id="WebApp_ID" 
         version="3.1">

    <display-name>Lycee Web Library</display-name>
    
    <servlet>
        <servlet-name>index</servlet-name>
        <servlet-class>net.coolblossom.lycee.app.web.servlet.IndexServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>logout</servlet-name>
        <servlet-class>net.coolblossom.lycee.app.web.servlet.LogoutServlet</servlet-class>
    </servlet>
    
    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>net.coolblossom.lycee.app.web.servlet.LoginServlet</servlet-class>
    </servlet>
    
    <servlet>
        <servlet-name>register</servlet-name>
        <servlet-class>net.coolblossom.lycee.app.web.servlet.RegisterServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>index</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login/*</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>logout</servlet-name>
        <url-pattern>/logout/*</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>register</servlet-name>
        <url-pattern>/register/*</url-pattern>
    </servlet-mapping>
    
